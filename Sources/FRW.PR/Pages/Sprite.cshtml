@page
@model FRW.PR.Extra.Pages.SpriteModel
@using FRW.PR.Extra.Extensions;
@{
    Response.ContentType = "text/css";
    Layout = "";

    var urlSprite = HttpContext.AddFileVersionToPath("/images/sprite.svg");
    <text>
        :root {
            --url-0822-cross2-blanc : url(@urlSprite#0822-cross2_blanc);
            --url-0821-check_blanc : url(@urlSprite#0821-check_blanc);
            --url-ico-erreur : url(@urlSprite#ico-erreur);
            --url-ico-poubelle : url(@urlSprite#ico-poubelle);                       
        }

        .note-editable a[target="_blank"]:after, a.lien-externe[target="_blank"]:after, span.lien-externe:after {
        background-image: url(@urlSprite#ico-lien-externe);
        }
        .utd-icone-svg.annuler {
            background-image: url(@urlSprite#0729-undo2);
        }
        .utd-icone-svg.chevron-haut-texte {
        background-image: url(@urlSprite#ico-chevron-bleu-texte);
        }
        .utd-icone-svg.chevron-haut-blanc {
        background-image: url(@urlSprite#ico-chevron-blanc);
        }
        .utd-icone-svg.check-blanc {
        background-image: url(@urlSprite#ico-check-blanc);
        }
        .utd-icone-svg.fleche-haut-blanche {
        background-image: url(@urlSprite#ico-fleche-blanche);
        }
        .utd-icone-svg.poubelle {
        background-image: url(@urlSprite#ico-poubelle);
        }
        .utd-icone-svg.user {
        background-image: url(@urlSprite#ico-user-bleu);
        }
        .utd-icone-svg.modifier {
            background-image: url(@urlSprite#0014-pencil);
        }
        .utd-icone-svg.tourner-gauche {
            background-image: url(@urlSprite#0726-undo);
        }
        .utd-icone-svg.tourner-droite {
            background-image: url(@urlSprite#0726-undo);
            transform: scaleX(-1);
        }
        .utd-icone-svg.crop {
            background-image: url(@urlSprite#0881-crop);
        }
        .utd-icone-svg.crochet-bleu {
            background-image: url(@urlSprite#0821-check);
        }
        .icone.user:before {
        background-image: url(@urlSprite#0287-user);
        }

        .icone.baby2:before {
        background-image: url(@urlSprite#0299-baby2);
        }

        .icone.cash-dollar:before {
        background-image: url(@urlSprite#0347-cash-dollar);
        }

        .icone.register:before {
        background-image: url(@urlSprite#0210-register);
        }

        .icone.clipboard-check:before {
            background-image: url(@urlSprite#0205-clipboard-check);
        }

        .utd-icone-svg.nouvelle-recherche {
            background-image: url(@urlSprite#0805-find-replace);
        }

        .utd-icone-svg.trombone {
            background-image: url(@urlSprite#0153-paperclip);
        }

    </text>
}
