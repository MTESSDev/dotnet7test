<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<location path="." inheritInChildApplications="false">
		<system.webServer>
			<handlers>
				<remove name="WebDAV" />
				<add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
			</handlers>
			<modules>
				<remove name="WebDAVModule" />
			</modules>
			<aspNetCore processPath="dotnet" arguments=".\FRW.PR.Extra.dll" stdoutLogEnabled="false" stdoutLogFile=".\logs\stdout" hostingModel="inprocess" />
		</system.webServer>
	</location>
	<system.webServer>
		<security>
			<requestFiltering removeServerHeader="true">
				<fileExtensions allowUnlisted="true" />
			</requestFiltering>
		</security>
		<httpProtocol>
			<customHeaders>
				<remove name="X-Powered-By" />
				<add name="X-Content-Type-Options" value="nosniff" />
				<add name="X-Xss-Protection" value="1; mode=block" />
				<!--<add name="X-Frame-Options" value="DENY" />-->
				<add name="Referrer-Policy" value="no-referrer" />
				<add name="X-Permitted-Cross-Domain-Policies" value="none" />
				<add name="Content-Security-Policy" value="default-src 'self' https://*.googletagmanager.com https://www.google-analytics.com 'unsafe-inline'; script-src 'self' https://*.googletagmanager.com https://*.google-analytics.com 'unsafe-inline' 'unsafe-eval'; img-src 'self' blob: https://*.googletagmanager.com https://www.google-analytics.com data:; object-src blob:; frame-src blob:; connect-src 'self' data: https://*.googletagmanager.com.com https://www.google-analytics.com" />
				<add name="Permissions-Policy" value="accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()" />
			</customHeaders>
		</httpProtocol>
	</system.webServer>
</configuration>